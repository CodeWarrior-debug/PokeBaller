<div class="container-fluid d-flex flex-row justify-content-center" id="login-header">
  <a href="/homepage">
    <img src="/images/pokeballer-logo-sm.png" alt="PokeBaller" class="logo" />
  </a>
</div>

<nav class="navbar justify-content-end navbar-dark bg-dark"></nav>

<div class="row justify-content-center">
  <div class="col-md-3 border border-4">
    <h2>Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
      </div>
      <input class="form-input" type="text" id="email-login" />
      <div class="form-group">
        <label for="password-login">Password:</label>
      </div>
      <input class="form-input" type="password" id="password-login" />
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="submit">LOGIN</button>
      </div>
    </form>
  </div>
  <div class="col-md-3 border border-4">
    <h2>Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
      </div>
      <input class="form-input" type="text" id="name-signup" />
      <div class="form-group">
        <label for="email-signup">Email:</label>
      </div>
      <input class="form-input" type="text" id="email-signup" />
      <div class="form-group">
        <label for="password-signup">Password:</label>
      </div>
      <input class="form-input" type="password" id="password-signup" />
      <div class="form-group">
        <button class="btn btn-primary" type="submit">SIGNUP</button>
      </div>
    </form>
  </div>
</div>

<!-- Login Modal -->
<div class="modal fade" id="LoginModal" tabindex="-1" aria-labelledby="LoginModalLabel" aria-hidden="true"
  role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="LoginModalLabel">Invalid Login!</h5>
        {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> --}}
      </div>
      <div class="modal-body">
        Sorry, you entered the wrong email or password. Please, try again.
      </div>
      <div class="modal-footer">
        <button onclick="closeModalLogin()" type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Signup Modal -->
<div class="modal fade" id="SignupModal" tabindex="-1" aria-labelledby="SignupModalLabel" aria-hidden="true"
  role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="SignupModalLabel">Invalid Signup!</h5>
        {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> --}}
      </div>
      <div class="modal-body">
        Sorry, you entered invalid signup information. Please, try again.
      </div>
      <div class="modal-footer">
        <button onclick="closeModalSignup()" type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal-backdrop fade show" id="backdrop" style="display: none;"></div>

<script src="/js/login.js"></script>